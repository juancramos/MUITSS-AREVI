                    android:text="@string/system_usability_scale_answer_3_text"/>

                <RadioButton
                    android:id="@+id/sus_9_4_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_usability_scale_answer_4_text"/>

                <RadioButton
                    android:id="@+id/sus_9_5_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_usability_scale_answer_5_text"/>
            </RadioGroup>

            <TextView
                android:id="@+id/sus_10_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="@string/system_usability_scale_question_10_text"
                android:ellipsize="end"
                android:hyphenationFrequency="normal"
                android:breakStrategy="simple"
                android:scrollHorizontally="false"/>

            <RadioGroup
                android:id="@+id/sus_10_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:ellipsize="end"
                android:hyphenationFrequency="normal"
                android:breakStrategy="simple"
                android:scrollHorizontally="false">

                <RadioButton
                    android:id="@+id/sus_10_1_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_usability_scale_answer_1_text"/>

                <RadioButton
                    android:id="@+id/sus_10_2_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_usability_scale_answer_2_text"/>

                <RadioButton
                    android:id="@+id/sus_10_3_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_usability_scale_answer_3_text"/>

                <RadioButton
                    android:id="@+id/sus_10_4_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_usability_scale_answer_4_text"/>

                <RadioButton
                    android:id="@+id/sus_10_5_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_usability_scale_answer_5_text"/>
            </RadioGroup>


            <TextView
                android:id="@+id/sus_11_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/system_usability_scale_free_question_text"
                android:ellipsize="end"
                android:hyphenationFrequency="normal"
                android:breakStrategy="simple"
                android:scrollHorizontally="false"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_scale_free_answer_text_input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/system_usability_scale_free_answer_text_input"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:minLines="4"
                    android:scrollbars="vertical"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>

